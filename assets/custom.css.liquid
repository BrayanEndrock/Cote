.image-cont .buttons-cont {
  width: 100%;
  display: grid;
  grid-template-columns: 1fr 1fr;
}

@media screen and (hover:hover){
  .image-cont .buttons-cont {
  	visibility: hidden;
    opacity: 0;
  }
  .image-cont:hover .buttons-cont {
    visibility: visible;
    opacity: 1;
  }
}
.image-cont .view-details {
  border: 1px solid #7b7572;
  font-size: 12px;
  padding: 11px 10px;
  text-transform: uppercase;
  line-height: 1.2;
}
.image-cont:hover .view-details {
  background: #fff;
}
.image-cont .add-to-cart-ajax {
  background: #335261;
  border-color: #335261;
  font-size: 12px;
  padding: 11px 10px;
  line-height: 1.2;
}
.image-cont .add-to-cart-ajax:hover {
  background: #f79b7f;
  border-color: #f79b7f;
}
.buttons-cont.desktop{
	display: none;
}
.buttons-cont.mobile{
	display: block;
}
@media screen and (min-width: 769px){
  .buttons-cont.desktop{ display: grid;}
  .buttons-cont.mobile{ display: none;}
  .image-cont .buttons-cont {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    grid-template-columns: 1fr;
    row-gap: 8px;
  }
  .image-cont .buttons-cont > * {
    max-width: 131px;
    margin: auto;
    width: 100%;
  }
}

@media screen and (max-width:768px){
  .collection-listing .product-block .buttons-cont {
    grid-template-columns: 1fr;
  }
  .collection-listing .product-block .buttons-cont.mobile .add-to-cart-ajax {
    max-width: 110px;
    margin: auto;
    background: #3E4B57;
  }
  .collection-listing .product-block .image-label-wrap {
    min-height: 150px;
  }
  .collection-listing .product-list {
  	display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }
  [data-section-type="collection-template"] .collection-listing .product-block {
  	width: 45%;
  }
  .collection-listing .product-block .block-inner {
    height: calc(100% - 20px);
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: flex-start;
  }
  .collection-listing .product-block .block-inner > * {
  	width: 100%;
  }
  .collection-listing .product-block .buttons-cont.mobile {
    align-self: flex-end;
  }
  
}

