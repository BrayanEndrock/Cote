  li[data-tag="yellows"] a:before {background:$YELLOWS;}
  li[data-tag="reds"] a:before {background:$REDS;}
  li[data-tag="purples"] a:before {background:$PURPLES;}
  li[data-tag="blues"] a:before {background:$BLUES;}
  li[data-tag="greens"] a:before {background:$GREENS;}
  li[data-tag="deeps"] a:before {background:$DEEPS;}
  li[data-tag="metallics"] a:before {background:$METALLICS;}
  li[data-tag="glitters"] a:before {background:$GLITTERS;}
  li[data-tag="neons"] a:before {background:$NEONS;}
  li[data-tag="golds"] a:before {background:$GOLDS;}
  li[data-tag="silvers"] a:before {background:$SILVERS;}
}