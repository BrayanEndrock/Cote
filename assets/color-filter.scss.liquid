    mask: url(https://cdn.shopify.com/s/files/1/0447/4049/files/icon-cote.svg?v=1594265702) no-repeat 50% 50%;
    -webkit-mask-size: contain;
    mask-size: contain;
    /* IE */
    @media all and (-ms-high-contrast:none) {
      width: 16px;
