{% elsif cm_date == today_date %}
{%- assign baseBtn = 'CYBER MONDAY' -%}
{%- assign baseMsg = 'Today Only 30% Off Polishes! Free Hand Mask & Foot Mask with purchase' -%}
{% elsif cme_date == today_date %}
