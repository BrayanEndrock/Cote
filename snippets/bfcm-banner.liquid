{%- assign baseMsg = 'Enjoy 30% Off your favorite Toxin-Free Polishes, Treatments and Hand & Foot Mask' -%}
{% assign bf_date = '2021-11-26' | date: '%d' %}
{% assign cm_date = '2021-11-29' | date: '%d' %}
{% assign cme_date = '2021-11-30' | date: '%d' %}
{% assign today_date = 'now' | date: '%d' %}
{% if bf_date == today_date %}
{%- assign baseBtn = 'BLACK FRIDAY' -%}
