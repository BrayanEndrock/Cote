    <div class="bfcm__banner-elements">
        <div class="bfcm__banner-button {% if cm_date == today_date %}blue{%endif%}">Free Gold Glitter Polish No. 107</div>
        <div class="bfcm__banner-message">With every purchase made from December 13th-16th</div>
    </div>
</div>
<style>
.bfcm__banner {
    background: #3E4B57;
    padding: 24px 0;
}

.bfcm__banner .bfcm__banner-elements {
    display: flex;
    align-items: center;
    justify-content: center;
}

.bfcm__banner .bfcm__banner-button {
    border: 2px solid #C0A457;
    box-sizing: border-box;
    display: inline-block;
    font-style: normal;
    font-weight: 900;
    font-size: clamp(16px, 1.125vw, 20px);
    line-height: 1;
    padding: 8px 12px;
    text-transform: uppercase;
    text-align: center;
    letter-spacing: 0.03em;
    color: #C0A457;
    margin-right: 32px;
}

.bfcm__banner .bfcm__banner-button.blue {
    border: 2px solid #83A9A8;
    color: #83A9A8;
}

.bfcm__banner .bfcm__banner-message {
    font-family: "Playfair Display", serif;
    font-size: clamp(16px, 1.125vw, 20px);
    line-height: 1.6;
    letter-spacing: 0.03em;
    color: #fff;
}

@media screen and (max-width: 991px) {
    .bfcm__banner {
        padding: 24px 16px;
    }

    .bfcm__banner .bfcm__banner-elements {
