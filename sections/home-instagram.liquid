<div class="grid-uniform">
    <h2><small>{{section.settings.hashtag}}</small>{{section.settings.title}}</h2>
    <div class="grid__item one-whole credibility-logos text-center instagram-feed--wrapper">
        {{section.settings.instagram}}
    </div>
</div>

{% schema %}
{
   "name":"Home Instagram",
   "class":"home-instagram",
   "settings":[
      {
          "type": "color",
          "id": "background",
          "label": "Background Color",
          "default": "#fff"
      },
     {
         "type": "text",
         "id": "hashtag",
         "label": "Hashtag",
         "default": "#cleanersaferbeauty"
     },
    {
        "type": "text",
        "id": "title",
        "label": "Title"
    },
    {
        "type": "color",
        "id": "title_color",
        "label": "Title Color",
        "default": "#f29270"
    },
   {
       "type": "html",
       "id": "instagram",
       "label": "Instagram HTML"
   }
   ],   
   "presets":[
      {
         "name":"Home Instagram",
         "category": "Cote"
      }
   ]
}
{% endschema %}

{% style %}
.home-instagram {
    padding: 74px 0 0;
    margin-top: 0 !important;
    background-color: {{section.settings.background}};
}
.home-instagram .grid-uniform {
    max-width: 1200px;
    margin: 0 auto;
}
.home-instagram h2 {
    font-size: 40px;
    line-height: 1.2;
    letter-spacing: 0.03em;
    text-align: center;
    max-width: 730px;
    margin: 0 auto 40px;
    color: {{section.settings.title_color}};
    
}
.home-instagram h2 small {
    display: block;
    font-size: 32px;
    font-family: Lato,sans-serif;
    font-weight: bold;
}
@media screen and (max-width: 768px) {
    .home-instagram {
        padding: 36px 0 0;
   }
    .home-instagram h2 {
        font-size: 28px;
        margin-bottom: 24px;
    }
    .home-instagram h2 small {
        font-size: 20px;
    }
    .instagram-feed--wrapper {
        padding-left: 0 !important;  
    }
}
{% endstyle %}