<div class="home-feature-hero--template-v2" id="bannerWrapper">
    <div class="home-feature-hero--container">
        <div class="main-content--wrapper">
            <h1>{{ section.settings.title }}</h1>
            <h2>{{ section.settings.subtitle }}</h2>
            <a href="{{ section.settings.url }}" id="anchorTrigger" class="btn btn--hero">{{ section.settings.label }}</a>
        </div>
    </div>
</div>

<script type="text/javascript">
    const bannerWrapper = document.getElementById('bannerWrapper');
    let anchor = document.getElementById('anchorTrigger');
    bannerWrapper.addEventListener('click', event => {
        anchor.click();
    });
</script>

<style>  
    .home-feature-hero--template-v2 {
      background-image: url({{ section.settings.hero | img_url: 'master' }}); 
      background-position: initial; 
      background-repeat: no-repeat;    
      background-size: cover;
      height: 544px;              
    } 
    @media (min-width: 481px) and (max-width: 768px) {
        .home-feature-hero--template-v2 {
            background-image: url({{ section.settings.mobile-hero | img_url: 'master' }});     
            background-size: cover;
            background-position: top; 
            height: 910px;         
        }
    }
    @media screen and (max-width: 480px) {
        .home-feature-hero--template-v2 {
            background-image: url({{ section.settings.mobile-hero | img_url: 'master' }});     
            background-size: cover;
            background-position: top;
            height: 620px;         
        }
    } 
  </style>

