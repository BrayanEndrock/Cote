{% stylesheet 'scss' %}
    .home-feature-hero-v2 {
        .home-feature-hero--template-v2 {
            cursor: pointer;
            @media screen and (max-width: 768px) {
                align-items: flex-end; 
                display: flex;
                justify-content: center;
            }
            .home-feature-hero--container {
                padding: 130px 0 0 129px;
                @media screen and (max-width: 768px) {
                    padding: 0;
                }
                .main-content--wrapper {
                    h1 {
                        color: #FFFFFF;
                        font-size: 48px;
                        font-style: normal;
                        font-weight: 400;
                        line-height: 64px;
                        margin: 0;
                        max-width: 450px;
                        padding: 0;
                        @media screen and (max-width: 768px) {
                            color: #FFFFFF;
                            font-size: 40px;
                            line-height: 64px;
                            margin-bottom: 70px;
                            max-width: 310px;
                        }
                    }
                    h2 {
                        color: #FFF;
                        font-family: 'Roboto' !important;
                        font-size: 20px;
                        font-style: normal;
                        line-height: 23px;
                        margin-bottom: 36px;
                        margin-top: 26px;
                        @media screen and (max-width: 768px) {
                            color: #FFFFFF;
                            margin-bottom: 34px;
                            margin-top: 16px;
                        }
                    }
                    .btn--hero {
                        background: #83A9A8;
                        color: #FFFFFF;
                        font-family: "Playfair Display", serif;
                        font-size: 18px;
                        font-style: normal;
                        font-weight: 700;
                        line-height: 24px;
                        letter-spacing: 0.05em;
                        padding: 8px 48px;
                        text-align: center;
                        text-transform: uppercase;
                        &:hover {
                            background: #fff;
                            border: 1px solid #83A9A8;
                            color: #83A9A8;
                            transition-duration: 0.5s;
                        }
                    }
                }
            }
        }
    }
{% endstylesheet %}